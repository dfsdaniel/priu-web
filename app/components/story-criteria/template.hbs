<div class="card-body">
  <div class="row">
    <div class="col-md pb-3">
      <p class="mb-3 mt-3">{{text}}<br /><small>{{subText}}</small></p>
      <input id="slider" type="text" data-slider-min="1" data-slider-max="9"
        data-slider-step="1" data-slider-value="{{value}}" change="(action changeValue)"/>
    </div>
    {{#if isGamified}}
      <div class="col-md-2 criteria-icon {{iconName}}">
        {{mood-icon name=iconName}}
      </div>
    {{/if}}
  </div>
</div>
