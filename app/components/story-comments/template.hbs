<h5 class="comments-title">{{priu-icon name="comments"}} Comentários</h5>
<div class="card">
  <div class="card-body p-2">
    {{#if comments}}
      {{#each comments as |cm|}}
        <div class="row story-comment border-bottom">
          <div class="col-md-2">
            {{priu-icon name="user-avatar"}}
          </div>
          <div class="col-md">
            <div class="user-name">{{cm.user.name}} <span class="badge role-{{cm.user.role}}">{{cm.user.role}}</span></div>
            <div class="comment-content">
              {{cm.content}}
            </div>
            <small>{{moment-from-now cm.dateTime}}</small>

            <div class="opinion-buttons">
              <button type="button" class="btn btn-outline-success btn-sm bt-like icon-button {{if (eq cm.currentUserOpinion.type 'LIKE') 'active'}}" {{action "likeComment" cm}}>{{priu-icon name="like"}}{{cm.likesCount}}</button>
              <button type="button" class="btn btn-outline-danger btn-sm bt-dislike icon-button {{if (eq cm.currentUserOpinion.type 'DISLIKE') 'active'}}" {{action "dislikeComment" cm}}>{{priu-icon name="dislike"}}{{cm.dislikesCount}}</button>
            </div>
          </div>
        </div>
      {{/each}}
    {{else}}
      Seja o primeiro a comentar e ganhe pontos!
    {{/if}}
  </div>
</div>
<textarea class="form-control mt-2" rows="3" placeholder="Digite aqui seu comentário"></textarea>