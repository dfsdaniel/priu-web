<div class="col-md">
  <form>
    <div class="form-group">
      <label>ID</label>
      {{input value=id class="form-control"}}
    </div>
    <div class="form-group">
      <label>Título</label>
      {{input value=title class="form-control"}}
    </div>
    <div class="form-group">
      <label>Critérios de aceitação</label>
      {{textarea value=acceptance class="form-control"}}
    </div>
    <div class="form-group">
      <label>Notas/Detalhes</label>
      {{textarea value=details class="form-control"}}
    </div>
    <button type="button" class="btn btn-primary" {{action "save"}}>Salvar</button>
  </form>
</div>