<div class="col-md text-center">
  {{#if (not-eq model.sprint.id currentSprint.id)}}
    <div class="alert alert-danger">
      <strong>ATENÇÃO!</strong> Esta estória não está na sprint atual!
    </div>
  {{/if}}

  <h2 class="text-dark">[#{{model.id}}] {{model.title}}</h2>
  <textarea class="form-control" rows="5">{{model.description}}</textarea>

  <div class="story-button-options mt-2" role="group">
    {{modal-button title="Critérios de aceitação" target="#acceptanceModal" disabled=btAcceptanceDisabled}}
    {{modal-button title="Wireframes" target="#wireframesModal" disabled=btWireframesDisabled}}
  </div>

  {{#if model.isVoted}}
    <div class="already-vote-alert alert alert-success mt-2 mb-0">
      <strong>Parabéns!</strong> Você votou nesta estória!
    </div>
  {{/if}}

  {{#if currentUser.isPO}}
    {{story-criteria text="Quanto valor esta estória traz para os usuários?" value=benefit}}
    {{story-criteria text="Esta estória vai fazer muita falta se não existir nesta sprint?" value=penalty}}
  {{else}}
    {{story-criteria text="Esta estória é muito trabalhosa, difícil ou complexa de ser feita?" value=cost}}
    {{story-criteria text="Existe um alto risco desta estória não ser concluída até o final da sprint?" value=risk}}
  {{/if}}

  <button type="button" class="btn btn-primary mt-2 mx-auto icon-button" {{action "saveVote"}}>{{priu-icon name="save"}}Salvar</button>
</div>

<div class="col-md-3">
  {{story-comments story=model
    currentUser=currentUser
    saveComment=(action "saveComment")
    addCommentLike=(action "addCommentLike")
    addCommentDislike=(action "addCommentDislike")}}
</div>

{{partial "modals"}}
