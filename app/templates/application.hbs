<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
    <a class="navbar-brand" href="#">
    {{priu-icon name="logo"}} PRIUS
  	</a>

    <div class="navbar-collapse">
      {{#if userSession.isAuthenticated}}
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            {{#link-to "dashboard" class="nav-link"}}Visão Geral{{/link-to}}
          </li>
          <li class="nav-item ">
            <a class="nav-link" href="#">Instruções</a>
          </li>
        </ul>
      {{/if}}

      <div class="my-2 my-lg-0">
        {{#if userSession.isAuthenticated}}
          {{user-info user=model.user onSignOut=(action "onSignOut")}}
        {{/if}}
      </div>
    </div>
  </div>
</nav>

<div class="container pt-2">
  {{#if userSession.isAuthenticated}}
    <div class="row">
      <div class="col-md-2 text-center">
        {{user-ranking ranking=currentUser.ranking}}
        {{current-sprint currentSprint=currentSprint}}
        {{stories-progress stories=model.allStories currentUser=currentUser}}
      </div>
      {{outlet}}
    </div>
  {{else}}
    {{outlet}}
  {{/if}}
</div>

{{notification-alert
  title=alertTitle
  text=alertText
  alertClass=alertClass}}